<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#270000"
    tools:context=".Cap1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="-62dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#270000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="381dp"
                android:layout_height="83dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/lato_black"
                android:text="Captain America:The First Avenger"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/antManImageView"
                android:layout_width="243dp"
                android:layout_height="400dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTextView"
                app:srcCompat="@drawable/cap" />

            <TextView
                android:id="@+id/descriptionTextView1"
                android:layout_width="334dp"
                android:layout_height="112dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato"
                android:text="Steve Rogers, a rejected military soldier, transforms into Captain America after taking a dose of a &quot;Super-Soldier serum&quot;. But being Captain America comes at a price as he attempts to take down a warmonger and a terrorist organization."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/antManImageView" />

            <TextView
                android:id="@+id/descriptionTextView2"
                android:layout_width="335dp"
                android:layout_height="25dp"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/lato"
                android:text="Genre: Action, Adventure, Sci-Fi"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/antManImageView" />

            <TextView
                android:id="@+id/descriptionTextView3"
                android:layout_width="335dp"
                android:layout_height="25dp"
                android:layout_marginTop="148dp"
                android:fontFamily="@font/lato"
                android:text="iMDB Rating: 6.9"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/antManImageView" />

            <TextView
                android:id="@+id/descriptionTextView4"
                android:layout_width="335dp"
                android:layout_height="25dp"
                android:layout_marginTop="244dp"
                android:fontFamily="@font/lato"
                android:text="Runtime: 2h 4m"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/antManImageView" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="335dp"
                android:layout_height="25dp"
                android:layout_marginTop="212dp"
                android:fontFamily="@font/lato"
                android:text="Release Date: 2011"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/antManImageView" />

            <TextView
                android:id="@+id/directorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/lato_black"
                android:text="Trailer"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/descriptionTextView" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/directorTextView"
                app:layout_constraintVertical_bias="1.0"></VideoView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
